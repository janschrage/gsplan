<h1>My Team</h1>
<h2><%= link_to '<<<', {:action => "index", :controller =>
"myteam", :report_date => @report_date<<(1) } %>
<%= h Date::MONTHNAMES[@report_date.month]+" "+@report_date.year.to_s %>
<%= link_to '>>>',  {:action => "index", :controller =>
"myteam", :report_date => @report_date>>(1) } %></h2>

<div class="table-wrap">
<h2>Plan</h2>
<div class="table-row">
<div class="table-cell">
<%= render(:partial => "teamcommitments/commitment_list", :object => @outputlist) %>
</div>
<div id="projectstats" class="table-cell">	
<%= render(:partial => "projects/project_list", :object => @projectplan) %>
</div>
</div>


</div>
</div>
<div class="table-row">
<h2>Reviews (current projects)</h2>	

<table>
  <tr>
    <th>Country</th>
    <th>Project</th>
    <th>Type</th>
    <th>Begin Date</th>
    <th>End Date (Planned)</th>
    <th>Spec?</th>
    <th>Design?</th>
    <th>Code?</th>
  </tr>

<% for project in @currentprojects %>
<tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td class="text"><%=h country_by_id(project.country).isocode %></td>
    <td class="text"><%=h project.name %></td>
    <td class="text"><%=h project.worktype.name %></td>
    <td class="text"><%=h project.planbeg.to_s %></td>
    <td class="text"><%=h project.planend.to_s %></td>
    <td class="text"><img src="<%= review_result_img_for_prj(project.id,Review::ReviewSpec) %>"></td>
    <td class="text"><img src="<%= review_result_img_for_prj(project.id,Review::ReviewDesign) %>"></td>
    <td class="text"><img src="<%= review_result_img_for_prj(project.id,Review::ReviewCode) %>"></td>
</tr>
<% end %>
</table>
</div>
</div>

<div class="table-row">

<div id="projects-wrap">
<h2>Report</h2>
<p>Data based on BW upload from <%=h @last_report_date.to_s %>.</p>
<div id="projects-row">


<div id="projects-left">
<table>
<tr><th>Ctry</th><th>Project</th><th>Plan</th><th>Act</th><th>Trend</th><th>Cat</th><th>Stat</th></tr>
<%   @projectplan.sort{|a,b| a[1][:country]<=>b[1][:country]}.each do |project| %>
<tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
	<td class="text"><%= h country_by_id(project[1][:country]).isocode %></td>
	<td class="text"><%= h project[1][:name] %></td>
	<td><%= h project[1][:committed_inper]%></td>
	<td><%= h project[1][:daysbooked] %></td>
	<td><img src="<%= project_trend_image(project[1][:committed_inper],project[1][:daysbooked]) %>"></td>
	<td class="text"><%= h project_quintile(project[1][:committed_inper],project[1][:daysbooked]) %></td>
	<td><img src="<%= project_status_image(project[1][:status]) %>" alt="<%= project_status_text(project[1][:status]) %>"></td>
</tr>
 <%end%>
</table>
</div>

<div id="projects-middle">
<div id="graph_wt">
<%= image_tag("/graph/graph_worktypes/#{session[:team_id]}", :format => 'png') %>
</div>
<br>
<div id="graph_quintiles">
<%= image_tag('/graph/graph_quintiles', :format => 'png') %>
</div>
<div id="graph_sumofdelta">
<%= image_tag('/graph/graph_planning_delta_in_days', :format => 'png') %>
</div>
</div>
</div>
</div>
</div>