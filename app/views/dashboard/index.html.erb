<div id="pagecontent">

<h1>Report Variables</h1>

<% form_remote_for :report_variables, @report_variables, :url=>{:controller=>"dashboard", :action=>"create_report"}, :before => "Element.show('spinner')",
         :success => "Element.hide('spinner')", :update => { 
         :success => "report_data"}, :html => { :multipart => true } do |f| %>
<table>
<tr>
<td class="text"><label for="begda">Begin date:</label></td><td><%= f.text_field :begda, :size => 10, :value => @report_variables[:begda].to_s %></td>
</tr>
<tr>
<td class="text"><label for="endda">End date:</label></td><td><%= f.text_field :endda, :size => 10, :value => @report_variables[:endda].to_s  %></td>
</tr>
<tr>
<td class="text"><label for="report_type">Report type:</label></td>
<td>
<!-- TODO: should be a collection select -->
<select id="report_type" name="report_variables[report_type]">
<option value="1">Work distribution - tracking</option>
<option value="2">Work distribution - cumulative</option>
<option value="3">Project age - current projects</option>
<option value="4">Project times</option>
<option value="5">Parked projects</option>
<option value="6">Process cycle times</option>
</select>
</td>
</tr>
</table>
<%= submit_tag "Go" %>

<% end %>
<%= image_tag("/images/ajax-loader.gif",
              :align => "absmiddle",
              :id => "spinner",
              :style => 'display: none; float: none; border:0px; padding: 10px;' ) %>

<div id="report">
<%= render(:partial => "report_data", :object => @report_data) %>
</div>




</div>


